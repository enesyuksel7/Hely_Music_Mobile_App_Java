<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".ui.muzikCalar.MuzikCalarActivity">


    <ImageView
        android:id="@+id/headphoens3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/cover_image" />

    <TextView
        android:id="@+id/songName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headphoens3"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Song Name"
        android:textSize="25sp" />




    <SeekBar
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/mSeekBarTime"
        android:layout_below="@id/songName3"/>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/mSeekBarTime"
        android:layout_marginTop="50dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/previous3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_skip_previous_24" />


        <ImageView
            android:id="@+id/play3"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_baseline_play_arrow__24" />


        <ImageView
            android:id="@+id/next3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_skip_next_24" />

    </LinearLayout>

</RelativeLayout>

